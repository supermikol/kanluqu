<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>Full Name</th>
          <th style="text-align:center">Email</th>
          <th style="text-align:center">Admin</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
          <tr>
            <td><%= user.full_name %></td>
            <td style="text-align:center">
              <%= user.email%>
            </td>
            <td style="text-align:center">
              <%= user.admin %>
            </td>
          </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <%= link_to 'Add Users', users_new_path, {class: "btn btn-primary btn-sm pull-right", role: "button"} %>
  <%= link_to 'Edit Users', users_edit_path, {class: "btn btn-primary btn-sm pull-right", role: "button"} %>
</div>